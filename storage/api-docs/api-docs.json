    "components": {
        "schemas": {
            "ActieResource": {
                "title": "Actie Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Climate March"
                    },
                    "body": {
                        "type": "string",
                        "example": "<p>Join us for...</p>"
                    },
                    "externe_link": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-12-15"
                    },
                    "start_time": {
                        "type": "string",
                        "format": "time",
                        "example": "14:00:00"
                    },
                    "end_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-12-15"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "time",
                        "example": "18:00:00"
                    },
                    "start_end": {
                        "type": "string",
                        "example": "15 Dec 2025, 14:00-18:00"
                    },
                    "start_unix": {
                        "type": "integer",
                        "example": 1734271200
                    },
                    "location_human": {
                        "type": "string",
                        "example": "Amsterdam Central"
                    },
                    "geoloc": {
                        "properties": {
                            "lat": {
                                "type": "number",
                                "format": "float",
                                "example": 52.3791
                            },
                            "lng": {
                                "type": "number",
                                "format": "float",
                                "example": 4.9003
                            }
                        },
                        "type": "object"
                    },
                    "slug": {
                        "type": "string",
                        "example": "climate-march"
                    },
                    "link": {
                        "type": "string",
                        "example": "https://example.com/actie/climate-march"
                    },
                    "afgelopen": {
                        "type": "boolean",
                        "example": false
                    },
                    "pageviews": {
                        "type": "integer",
                        "example": 150
                    },
                    "pageviews_text": {
                        "type": "string",
                        "example": "150"
                    },
                    "organizers": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrganizerResource"
                        }
                    },
                    "categories": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CategoryResource"
                        }
                    },
                    "themes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ThemeResource"
                        }
                    },
                    "image": {
                        "type": "object"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "CategoryResource": {
                "title": "Category Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Demonstratie"
                    },
                    "slug": {
                        "type": "string",
                        "example": "demonstratie"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "OrganizerResource": {
                "title": "Organizer Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Climate Action"
                    },
                    "logo": {
                        "type": "string",
                        "example": "/storage/logos/climate-action.png"
                    },
                    "slug": {
                        "type": "string",
                        "example": "climate-action"
                    },
                    "description": {
                        "type": "string",
                        "nullable": true
                    },
                    "website": {
                        "type": "string",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "ThemeResource": {
                "title": "Theme Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Klimaat"
                    },
                    "color": {
                        "type": "string",
                        "example": "#00FF00"
                    },
                    "slug": {
                        "type": "string",
                        "example": "klimaat"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
